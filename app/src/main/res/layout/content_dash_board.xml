<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sachin.fms_client_v1.DashBoardActivity"
    tools:showIn="@layout/activity_dash_board">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"

            android:id="@+id/chart_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/divider_color"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/activity_vertical_margin">
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pie_chart"
                android:layout_width="match_parent"
                android:layout_height="350dp">


            </com.github.mikephil.charting.charts.PieChart>

        </android.support.v7.widget.CardView>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:layout_below="@+id/chart_card">

            <TableRow

                android:padding="10dp">

                <TextView
                    android:id="@+id/text0"
                    android:paddingLeft="10dp"
                    android:text="Call Logged"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text0_0"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|right"

                    android:text="Location" />


            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />


            <TableRow android:padding="10dp">

                <TextView
                    android:id="@+id/text1"
                    android:paddingLeft="10dp"
                    android:text="Open"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text1_1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|right"
                    android:text="Location" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <TableRow android:padding="10dp">

                <TextView
                    android:id="@+id/text2"
                    android:paddingLeft="10dp"
                    android:text="Assigned"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/text2_2"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|right"

                    android:text="Location" />


            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text3"
                    android:paddingLeft="10dp"
                    android:text="Unassigned"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text3_3"
                    android:layout_width="match_parent"
                    android:layout_weight="1"

                    android:gravity="center_horizontal|right"
                    android:text="Location" />


            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <TableRow android:padding="10dp">

                <TextView
                    android:id="@+id/text4"
                    android:paddingLeft="10dp"
                    android:text="Other Status"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text4_4"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|right"

                    android:text="Location" />


            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <TableRow android:padding="10dp">

                <TextView
                    android:id="@+id/text5"
                    android:paddingLeft="10dp"
                    android:text="Completed"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text5_5"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|right"

                    android:text="Location" />


            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <TableRow android:padding="10dp">

                <TextView
                    android:id="@+id/text6"
                    android:paddingLeft="10dp"
                    android:text="Not Completed"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text6_6"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|right"

                    android:paddingLeft="20dp"
                    android:text="Location" />


            </TableRow>

        </TableLayout>
        </RelativeLayout>



</android.support.v4.widget.NestedScrollView>
