<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/status_card_view"
    android:layout_height="wrap_content"
    android:background="@drawable/halfbg"

    android:layout_width="match_parent"
    app:cardElevation="@dimen/activity_horizontal_margin"
    app:cardCornerRadius="10dp"
    android:layout_margin="@dimen/activity_horizontal_margin">
    <RelativeLayout
        android:layout_width="match_parent"


        android:id="@+id/r_1"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="wrap_content">


          <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/rel1"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt1"
                    android:text="Reference No."
                    android:textSize="@dimen/material_text_body1"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/title"
                    android:text="TITLE"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/material_text_body1"
                    android:textStyle="bold"

                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/rel2"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_below="@+id/rel1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt2"
                    android:text="Reported On"
                    android:textSize="@dimen/material_text_body1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"

                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/sdate"
                    android:text="12/12/2016"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/material_text_body1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"

                    android:layout_height="wrap_content" />
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rel3"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_below="@+id/rel2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txt3"
                android:textColor="#FFFFFF"
                android:text="Location"
                android:textSize="@dimen/material_text_subhead"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/location"
                android:textColor="#FFFFFF"
                android:layout_alignParentRight="true"
                android:text="Location"
                android:textSize="@dimen/material_text_subhead"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:id="@+id/location_view"
            android:elevation="1dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_below="@+id/rel3"
            android:background="@color/secondary_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/rel5"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_below="@+id/location_view"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/txt4"
                android:textColor="#FFFFFF"
                android:text="Unit "
                android:textSize="@dimen/material_text_subhead"
                android:paddingRight="30dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="3" />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/unit"
                android:textColor="#FFFFFF"
                android:text="asdasd"
                android:textSize="@dimen/material_text_subhead"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:maxLines="3"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:id="@+id/unit_view"
            android:elevation="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_below="@+id/rel5"
            android:background="@color/secondary_text"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rel4"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_below="@id/unit_view"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FFFFFF"

                android:layout_width="match_parent"
                android:id="@+id/complaint"
                android:text="tekashdj kdhakjdh akjdhajkhdk ajsdhkajshdkjash dkjashdjkashdkj ashdjkashdkjas hdjkashdkjash djkashd"
                android:textSize="@dimen/material_text_headline"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/complaint_view"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:elevation="1dp"
            android:layout_below="@+id/rel4"
            android:background="@color/secondary_text"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/complaint_view"
            android:id="@+id/p_rl"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#FFFFFF"

                android:layout_width="wrap_content"
                android:text="Priority :"
                android:textSize="@dimen/material_text_body1"
                android:id="@+id/priority_1"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#FFFFFF"

                android:layout_width="wrap_content"
                android:text="Priority"
                android:textSize="@dimen/material_text_body1"
                android:id="@+id/priority"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/priority_view"
            android:elevation="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/p_rl"
            android:background="@color/secondary_text"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/p_rl"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FFFFFF"

                android:layout_width="wrap_content"
                android:text="Status :"
                android:textSize="@dimen/material_text_body1"
                android:textStyle="bold"

                android:id="@+id/status_1"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#FFFFFF"

                android:layout_width="wrap_content"
                android:text="STATUS"
                android:textSize="@dimen/material_text_body1"
                android:id="@+id/status"
                android:textStyle="bold"

                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>